{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@tsconfig/strictest/tsconfig", "@tsconfig/esm/tsconfig.json"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "declaration": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": false
  }
}
