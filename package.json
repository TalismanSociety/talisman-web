{
  "private": true,
  "name": "talisman-web",
  "license": "GPL-3.0-or-later",
  "packageManager": "yarn@3.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "start": "yarn workspaces foreach run start",
    "build": "yarn workspaces foreach run build",
    "test": "yarn workspaces foreach run test --watchAll=false",
    "lint": "yarn workspaces foreach run lint",
    "checkTypes": "yarn workspaces foreach run checkTypes",
    "e2e": "yarn workspaces foreach run e2e"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "eslint": "^8.33.0",
    "husky": "^8.0.3",
    "import-sort-style-module": "^6.0.0",
    "prettier": "^2.8.3",
    "prettier-plugin-import-sort": "^0.0.7",
    "pretty-quick": "^3.1.3"
  },
  "resolutions": {
    "json-stream-stringify": "2.0.4"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
